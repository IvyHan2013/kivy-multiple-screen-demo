<ConInfoScreen>:
	name : 'ConInfoScreen'

	GridLayout:
        cols: 1
        size_hint_y: None  
        pos_hint_y: None
        spacing: '25dp'
        height: self.minimum_height


        Label:
            text: 'Connectivy Information'
            font_size: '20dp'

        Widget:
        BoxLayout:
        	orientation: 'vertical'
        	spacing: '5dp'
        	padding: '5dp'
        	height: self.minimum_height
        	size_hint_y: None
        	pos_hint_y: None

            Button:
	        	size_hint_x: 0.5
	        	size_hint_y: None
	        	pos_hint: {"center_x": .5}
	            text: 'back'
	            font_size: '24dp'
	            height: '64dp'
	        	on_release: app.go_screen(2)